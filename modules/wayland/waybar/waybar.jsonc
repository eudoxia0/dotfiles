// -*- mode: jsonc -*-
{
  "position": "top",
  "height": 30,
  "spacing": 4,
  "modules-left": ["sway/workspaces"],
  "modules-center": [],
  "modules-right": ["wireplumber", "battery", "tray", "clock"],
  "sway/workspaces": {
    "persistent-workspaces": {
      "α": [],
      "β": [],
      "γ": [],
      "δ": [],
      "ε": [],
    },
    "alphabetical_sort": true,
  },
  "tray": {
    "spacing": 10,
    "icon-size": 21,
  },
  "wireplumber": {
    "format": "VOL {volume}%",
    "format-muted": "MUTE",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15,
    },
    "format": "BAT {capacity}%",
    "format-charging": "CHG {capacity}%",
    "format-plugged": "PLG {capacity}%",
  },
  "clock": {
    "format": "{:%a, %d %b %Y, %I:%M%p}",
  },
}
