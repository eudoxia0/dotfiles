!!!! xterm configuration

! Terminal name.
XTerm.termName:          xterm-256color
! Font.
XTerm.vt100.faceName:    Terminus:pixelsize=16:antialias=true:autohint=true;
! Inner border.
XTerm.vt100.internalBorder: 20
! Use UTF-8
XTerm.vt100.locale:      false
XTerm.vt100.utf8:        true
! Colour theme.
XTerm.vt100.foreground:  FOREGROUND
