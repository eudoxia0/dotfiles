# X Compose Key Sequences
# This file defines custom character compositions using the compose key
# Usage: Press Compose (Right Alt), then the sequence of keys defined below

include "%L"

# dashes
<Multi_key> <minus> <minus> <space> : "–" # en dash
<Multi_key> <minus> <minus> <minus> : "—" # em dash

# quotes
<Multi_key> <grave>      <space>      : "‘" # left single quote
<Multi_key> <apostrophe> <space>      : "’" # right single quote
<Multi_key> <grave>      <grave>      : "“" # left double quote
<Multi_key> <apostrophe> <apostrophe> : "”" # right double quote
