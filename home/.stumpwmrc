;;; Commands

(defmacro com (name cmd keybinding class)
  `(progn
     (defcommand ,name () ()
       (run-or-raise ,cmd '(:class ,class)))
     (define-key *top-map* (kbd ,keybinding) ,(symbol-name name))))

