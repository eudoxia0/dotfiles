// Reference: https://zed.dev/docs/configuring-zed
{
  "edit_predictions": {
    "disabled_globs": ["*.md"],
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "buffer_font_family": "Inconsolata",
  "buffer_font_size": 16,
  "project_panel": {
    "auto_fold_dirs": false
  },
  "soft_wrap": "editor_width",
  "theme": "Zed Legacy: Atelier Seaside Light",
  "ui_font_family": "Inconsolata",
  "ui_font_size": 16,
  "languages": {
    "Markdown": {
      "show_completions_on_input": false
    }
  }
}
